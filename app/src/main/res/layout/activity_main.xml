<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.lance.common.widget.TopBar
        android:id="@+id/top_bar_1"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorPrimary"
        app:titleText="测试标题测试标题测试标题测试标题测试标题测试标题"
        app:titleTextColor="@android:color/white"
        app:titleTextSize="18sp"/>

    <com.lance.common.widget.TopBar
        android:id="@+id/top_bar_2"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorPrimaryDark"
        app:leftDrawable="@mipmap/icon_back"
        app:titleText="测试左侧图片"
        app:titleTextColor="@android:color/white"
        app:titleTextSize="18sp"/>

    <com.lance.common.widget.TopBar
        android:id="@+id/top_bar_3"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorAccent"
        app:leftText="左边文字左边文字"
        app:titleText="测试左侧图片和文字"
        app:titleTextColor="@android:color/white"
        app:titleTextSize="18sp"/>

    <com.lance.common.widget.TopBar
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        app:leftDrawable="@mipmap/icon_back"
        app:leftDrawableAlignment="left"
        app:leftText="左边文字"
        app:titleText="测试标题"
        app:titleTextColor="@android:color/white"
        app:titleTextSize="18sp"/>
</LinearLayout>
